// Define your tree class in this file!
public class Tree {
  public static void main(String[] args) {
    // I am going to introduce myself and plant a tree
    System.out.println("Hi there! I'm Kathryn and I'm learning to code in Java.");
    System.out.println("I'm going to plant some trees today!");
    // normal tree
    System.out.println("  *  ");
    System.out.println(" *** ");
    System.out.println("*****");
    System.out.println("  *  ");
    System.out.println("  *  ");

    // christmas tree
    System.out.println("  o  ");
    System.out.println("  ~  ");
    System.out.println(" o o ");
    System.out.println(" ~ ~ ");
    System.out.println("o o o");
    System.out.println("~ ~ ~");
    System.out.println("  *  ");
    System.out.println("  *  ");
  }
}
